{
    "name": "@dintero/node",
    "version": "0.0.1",
    "description": "Node.js library for the Dintero API",
    "main": "./dist/Api.js",
    "module": "./dist/Api.mjs",
    "types": "./dist/Api.d.ts",
    "license": "MPL-2.0",
    "private": true,
    "author": "Dintero <support@dintero.com> (https://dintero.com/)",
    "exports": {
        ".": {
            "require": "./dist/Api.js",
            "import": "./dist/Api.mjs",
            "types": "./dist/Api.d.ts"
        }
    },
    "jest": {
        "preset": "ts-jest"
    },
    "files": [
        "client",
        "dist"
    ],
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "importOrderParserPlugins": [
            "typescript"
        ],
        "importOrder": [
            "^[./]"
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "plugins": [
            "@trivago/prettier-plugin-sort-imports"
        ],
        "overrides": [
            {
                "files": [
                    "*.yml",
                    "*.yaml"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": [
            "**/dist/"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ]
    },
    "scripts": {
        "build": "tsup client/Api.ts --format cjs,esm --dts --clean --no-splitting",
        "gen": "./scripts/gen.sh payments ./client && yarn -s prettier --check -w client && yarn run build",
        "postgen": "prettier --write ./client",
        "pretest": "yarn gen",
        "test": "yarn -s jest",
        "lint": "yarn -s prettier --check . && yarn -s eslint .",
        "tsc": "tsc"
    },
    "devDependencies": {
        "@apidevtools/swagger-parser": "^10.1.0",
        "@trivago/prettier-plugin-sort-imports": "4.1.1",
        "@tsconfig/node18": "18.2.0",
        "@types/jest": "29.5.3",
        "@typescript-eslint/eslint-plugin": "6.1.0",
        "@typescript-eslint/parser": "6.1.0",
        "esbuild": "^0.18.16",
        "esbuild-register": "^3.4.2",
        "eslint": "8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "29.6.1",
        "openapi-types": "^12.1.3",
        "prettier": "2.8.8",
        "ts-jest": "29.1.1",
        "ts-pattern": "4.0.5",
        "tsup": "^7.1.0",
        "typescript": "5.1.6"
    }
}
