{
    "name": "@dintero/node",
    "version": "0.0.1",
    "description": "Node.js library for the Dintero API",
    "main": "./dist/dintero.js",
    "typings": "./dist/dintero.d.ts",
    "license": "MIT",
    "private": true,
    "author": "Dintero <support@dintero.com> (https://dintero.com/)",
    "jest": {
        "preset": "ts-jest"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "importOrderParserPlugins": [
            "typescript"
        ],
        "importOrder": [
            "^[./]"
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "plugins": [
            "@trivago/prettier-plugin-sort-imports"
        ],
        "overrides": [
            {
                "files": [
                    "*.yml",
                    "*.yaml"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": [
            "**/dist/*.js"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ]
    },
    "scripts": {
        "build": "yarn -s tsc -p ./tsconfig.json",
        "test": "yarn -s jest",
        "lint": "yarn -s prettier --check . && yarn -s eslint ."
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "4.1.1",
        "@tsconfig/node18": "18.2.0",
        "@types/jest": "29.5.3",
        "@typescript-eslint/eslint-plugin": "6.2.0",
        "@typescript-eslint/parser": "6.1.0",
        "eslint": "8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "29.6.1",
        "prettier": "2.8.8",
        "ts-jest": "29.1.1",
        "typescript": "5.1.6"
    }
}
